<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DayNight" parent="@android:style/Theme.Material.Light.NoActionBar" />

    <style name="AppTheme" parent="Theme.DayNight">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBehavior" tools:targetApi="tiramisu">icon_preferred</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/fhraise_text</item>
        <item name="windowSplashScreenBackground">@color/brand_background_color</item>
        <item name="windowSplashScreenAnimatedIcon" tools:ignore="DuplicateDefinition">
            @drawable/ic_launcher_foreground
        </item>
        <item name="windowSplashScreenAnimatedIcon" tools:ignore="DuplicateDefinition" tools:targetApi="s">
            @drawable/splash_icon
        </item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
</resources>
